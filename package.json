{
  "name": "floggy",
  "version": "0.0.0-dripip",
  "repository": "git@github.com:jasonkuhrt/floggy.git",
  "author": "Jason Kuhrt",
  "license": "MIT",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "scripts": {
    "format": "pnpm format:prettier && pnpm format:imports",
    "format:prettier": "prettier --write .",
    "format:imports": "format-imports src && format-imports tests",
    "format:check": "pnpm format:check:imports && pnpm format:check:prettier",
    "format:check:imports": "format-imports --check src tests",
    "format:check:prettier": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "dev": "pnpm clean && tsc -w -p tsconfig.cjs.json",
    "dev:test": "pnpm test --watch",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "ts-node scripts/build-esm.mts",
    "test": "cross-env FORCE_COLOR=1 jest",
    "clean": "rm -rf dist node_modules/.cache",
    "release:stable": "dripip stable",
    "release:preview": "dripip preview",
    "release:pr": "dripip pr",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@jest/types": "^29.0.1",
    "@prisma-labs/prettier-config": "0.1.0",
    "@swc/core": "^1.2.246",
    "@tsconfig/node14": "^1.0.3",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^29.0.0",
    "@types/lodash": "4.14.184",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "chalk": "4",
    "cross-env": "7.0.3",
    "dripip": "0.10.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-only-warn": "1.0.3",
    "execa": "^6.1.0",
    "format-imports": "2.4.1",
    "jest": "29.0.1",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-typeahead": "2.1.1",
    "prettier": "2.4.1",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "type-fest": "2.3.4",
    "typescript": "4.8.2",
    "typescript-snapshots-plugin": "1.7.0"
  },
  "dependencies": {
    "kleur": "^4.1.4",
    "lodash": "^4.17.21",
    "strip-ansi": "6"
  },
  "importSorter": {
    "emptyLinesBetweenGroups": false,
    "wrappingStyle": "prettier"
  }
}
