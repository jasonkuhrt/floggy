{
  "name": "floggy",
  "version": "0.0.0-dripip",
  "repository": "git@github.com:jasonkuhrt/floggy.git",
  "author": "Jason Kuhrt",
  "license": "MIT",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      },
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      }
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .mts --fix",
    "lint:check": "eslint . --ext .mts --max-warnings 0",
    "types:check": "pnpm tsc --noEmit",
    "dev": "pnpm clean && tsc -w -p tsconfig.cjs.json",
    "dev:test": "pnpm test --watch",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "ts-node scripts/ts-build.mts --cjs",
    "build:esm": "ts-node scripts/ts-build.mts --esm",
    "test": "cross-env FORCE_COLOR=1 vitest",
    "clean": "rm -rf dist node_modules/.cache",
    "release:stable": "dripip stable",
    "release:preview": "dripip preview",
    "release:pr": "dripip pr",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@prisma-labs/prettier-config": "0.1.0",
    "@swc/core": "1.2.246",
    "@tsconfig/node14": "1.0.3",
    "@types/chalk": "2.2.0",
    "@types/lodash": "4.14.184",
    "@types/node": "18.7.14",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "cross-env": "7.0.3",
    "dripip": "0.10.0",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-deprecation": "1.3.2",
    "eslint-plugin-only-warn": "1.0.3",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tsdoc": "0.2.16",
    "execa": "6.1.0",
    "fast-glob": "3.2.11",
    "fs-jetpack": "4.3.1",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.2",
    "vitest": "0.22.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "kleur": "^4.1.5",
    "lodash": "^4.17.21",
    "strip-ansi": "6"
  },
  "importSorter": {
    "emptyLinesBetweenGroups": false,
    "wrappingStyle": "prettier"
  }
}
